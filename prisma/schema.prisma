generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  password   String
  role       Role       @default(READER)
  posts      Post[]
  comments   Comment[]
  categories Category[]
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String @unique
  posts  Post[] @relation("CategoryPost")
  user   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  content     String
  createdAt   DateTime  @default(now())
  User        User?     @relation(fields: [userId], references: [id])
  userId      Int?
  comments    Comment[]
  isPublish   Boolean   @default(false)
  category    Category? @relation("CategoryPost", fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  categoryId  Int?
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  Post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int?
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

enum Role {
  READER
  AUTHOR
}
